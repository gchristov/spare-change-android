<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.gchristov.sparechange.repository.model.SavingsGoal" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_margin_double"
        android:paddingTop="@dimen/activity_margin_double"
        android:paddingEnd="@dimen/activity_margin_double">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin_double"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.name}"
                android:textColor="@color/accent"
                android:textSize="24sp"
                tools:text="Transaction" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/savings_goals_percent(item.savedPercentage)}"
                android:textColor="@color/accent"
                android:textSize="14sp"
                tools:text="(10% complete)" />

            <View
                style="@style/SeparatorTheme"
                android:layout_marginTop="@dimen/activity_margin" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.totalSaved.price()}"
            android:textColor="@color/accent"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Â£12.67" />
    </LinearLayout>
</layout>